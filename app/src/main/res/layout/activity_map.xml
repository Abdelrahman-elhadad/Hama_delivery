<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="hama.alsaygh.kw.delivery.view.map.MapsViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <fragment
            android:id="@+id/map"
            android:name="hama.alsaygh.kw.delivery.view.map.MySupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="FragmentTagUsage" />
        <View
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:alpha="0.16"
            android:background="#000" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/transperant">

            <ImageView
                android:id="@+id/imageView_back"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/back" />

            <TextView
                android:id="@+id/txt_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:fontFamily="@font/cairobold"
                android:text="@string/Language_Settings19"
                android:textColor="@color/blackcolor1"
                android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>
</layout>