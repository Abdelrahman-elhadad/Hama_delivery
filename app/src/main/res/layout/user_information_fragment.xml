<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="hama.alsaygh.kw.delivery.view.order.orderDetails.userInfo.UserInfoViewModel" />

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/col4"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/cairobold"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"  />


                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.name}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/cairoregular"
                    android:textSize="12sp"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Phone_Number"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/col4"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/cairobold"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"  />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.phone}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView8"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/cairoregular"
                    android:textSize="12sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Email"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/col4"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/cairobold"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"  />


                <TextView
                    android:id="@+id/textView174"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.email}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView9"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/cairoregular"
                    android:textSize="12sp"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Address"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/col4"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/cairobold"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"  />

                <TextView
                    android:id="@+id/textView1874"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{model.address}"
                    app:layout_constraintStart_toEndOf="@+id/textView12"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView11"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/cairoregular"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black" />

                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/glgl"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView1874"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="2dp" />


                <TextView
                    android:id="@+id/textView112"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Items"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/bony"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/cairobold"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view"  />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.productCount}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/cairoregular"
                    android:textSize="12sp"
                    android:textColor="@color/bony"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="46dp" />

               <androidx.recyclerview.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/rv_items"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/textView112"/>
                <View
                    android:id="@+id/view1"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:background="@color/glgl"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/rv_items"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="2dp" />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Items"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/bvb"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/cairobold"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view1"  />


                <TextView
                    android:id="@+id/textView982"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Delivery_Fees"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/bvb"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/cairobold"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"  />

                <TextView
                    android:id="@+id/textView74"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.productCount}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view1"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/cairoregular"
                    android:textSize="12sp"
                    android:textColor="@color/bvb"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="46dp" />

                <TextView
                    android:id="@+id/textVie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.deliveryFees}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView74"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/cairoregular"
                    android:textSize="12sp"
                    android:textColor="@color/bvb"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="46dp" />


                <View
                    android:id="@+id/view4"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:background="@color/bvb"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textVie"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="2dp" />

                <TextView
                    android:id="@+id/textView892"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TOTAL"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/bvb"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/cairobold"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view4"  />

                <TextView
                    android:id="@+id/textVie89"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.totalPrice}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view4"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/cairoregular"
                    android:textSize="12sp"
                    android:textColor="@color/bvb"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="46dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView892"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/ll_view_map"
                    android:padding="5dp"
                    android:onClick="@{model::onAddressClick}"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/bony"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/map2"
                        android:layout_marginStart="10dp" />

                    <TextView
                        android:id="@+id/textView177"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/cairobold"
                        android:textSize="12sp"
                        android:text="@string/Map_View" />
                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_view_map"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>