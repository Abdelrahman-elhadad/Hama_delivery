<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.example.hama_delivery.adapters.orderPending.OrderPendingViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_active_fragment">

        <ImageView
            android:id="@+id/iv_item1"
            android:layout_width="48dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="1dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/khatem" />

        <ImageView
            android:id="@+id/iv_item2"
            android:layout_width="48dp"
            android:layout_height="62dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/iv_item1"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:srcCompat="@drawable/khatem" />

        <ImageView
            android:id="@+id/iv_item3"
            android:layout_width="48dp"
            android:layout_height="62dp"
            android:layout_below="@+id/iv_item1"
            android:layout_alignParentStart="true"
            android:padding="1dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/khatem" />

        <ImageView
            android:id="@+id/iv_item4"
            android:layout_width="48dp"
            android:layout_height="62dp"
            android:layout_below="@+id/iv_item1"
            android:layout_toEndOf="@+id/iv_item3"
            android:padding="1dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/khatem" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/iv_item2"
            android:fontFamily="@font/cairobold"
            android:gravity="start"
            android:lines="2"
            android:text="@{model.itemsNames}"
            android:textAlignment="viewStart"
            android:textColor="@color/blackcolor1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/cairobold"
            android:lines="1"
            android:text="@{model.price}"
            android:textColor="@color/my_cart1"
            android:textSize="15sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_price"
    android:layout_alignStart="@+id/tv_price"
    android:layout_alignBottom="@id/iv_item4"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_accept_order"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/back_btn"
        android:fontFamily="@font/cairobold"
        android:gravity="center"
        android:lines="1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/Accept_Order"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <ProgressBar
        android:id="@+id/pb_accept_order"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/back_btn"
        android:padding="3dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_view_details"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/back_btn_pending"
        android:fontFamily="@font/cairoregular"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/View_Details"
        android:textColor="@color/skany"
        android:textSize="12sp" />
</LinearLayout>




    </RelativeLayout>
</layout>
