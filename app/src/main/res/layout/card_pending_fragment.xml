<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="10dp"
    android:background="@drawable/back_active_fragment">

    <ImageView
        android:id="@+id/ring1"
        android:layout_width="48dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:padding="1dp"
        app:srcCompat="@drawable/khatem" />

    <ImageView
        android:id="@+id/ring2"
        android:layout_width="48dp"
        android:layout_height="57dp"
        android:padding="1dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ring1"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/khatem" />

    <ImageView
        android:id="@+id/ring3"
        android:layout_width="48dp"
        android:layout_height="57dp"
        android:layout_below="@+id/ring1"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:padding="1dp"
        app:srcCompat="@drawable/khatem" />

    <ImageView
        android:id="@+id/ring4"
        android:layout_width="48dp"
        android:layout_height="57dp"
        android:padding="1dp"
        android:layout_below="@+id/ring1"
        android:layout_toEndOf="@+id/ring3"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/khatem" />


    <TextView
        android:id="@+id/gold_ring11"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/ring2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/cairobold"
        android:lines="2"
        android:text="@string/gold_ring"
        android:textColor="@color/blackcolor1"
        android:textSize="15sp"
        android:gravity="start"
        android:textAlignment="viewStart"/>

    <TextView
        android:id="@+id/kwd150"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/gold_ring11"
        android:layout_alignStart="@+id/gold_ring11"
        android:fontFamily="@font/cairobold"
        android:lines="1"
        android:layout_marginTop="5dp"
        android:text="150KWD"
        android:textColor="@color/my_cart1"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/prouduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kwd150"
        android:background="@drawable/back_btn"
       android:padding="10dp"
        android:layout_alignStart="@+id/ring4"
        android:layout_marginTop="5dp"
        android:layout_alignBottom="@id/ring4"
        android:fontFamily="@font/cairobold"
        android:layout_marginStart="60dp"
        android:lines="1"
        android:text="@string/Accept_Order"
        android:textColor="@color/white"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ring4"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:gravity="center"
        android:layout_marginEnd="50dp"
        android:layout_toEndOf="@+id/prouduct"
        android:background="@drawable/back_btn_pending"
        android:fontFamily="@font/cairoregular"
        android:padding="10dp"
        android:text="@string/View_Details"
        android:textColor="@color/skany"
        android:textSize="12dp" />


</RelativeLayout>

